@model Attest.Models.Users

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Lk-user</title>
</head>
<body>
    <form method="post" asp-controller="User" asp-action="Creat">
        <button type="submit" style="margin:5px;" asp-area="" asp-controller="User" asp-action="Creat"> Подать заявление</button>
        <table>
            <tr>
                <th>№ заявления</th>
                <th>Дата подачи</th>
                <th>Должность</th>
                <th>Дата обновления</th>
                <th>Статус</th>
                <th>Итоговый балл</th>
                <th colspan="2">Кнопки управления</th>

            </tr>
            @foreach (var row in ViewBag.LK)
            {

                <tr>
                    <td>@row.Id</td>
                    <td><a asp-controller="User" asp-action="edit" asp-route-id="@row.Id">@row.data_podachi</a> </td>
                    <td>@row.dolgnost_att</td>

                    <td>@row.data_obnovl</td>
                    <td>@row.status</td>
                    <td>@row.ball</td>


                    <td> <a asp-controller="User" asp-action="edit" asp-route-id="@row.Id">Изменить</a> | <a asp-controller="User" asp-action="Delete" asp-route-id="@row.Id" onclick="return confirm('Ты Серьезно ?')">Удалить</a></td>
                </tr>
            }
        </table>

    </form>
</body>
</html>