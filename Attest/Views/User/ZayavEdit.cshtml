
@model Attest.Models.Zayavlen


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Изменить пользователя</title>
</head>
<body>
    <form method="post" asp-controller="User" asp-action="ZayavSaveEdit">
        <div class="panel-group" id="accordion">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne">
                            Общая информация
                        </a>
                    </h4>
                </div>
                <div id="collapseOne" class="panel-collapse collapse in">
                    <div class="panel-body">
                        <table>
                            <tr>
                                <td>№ заявления</td>
                                <td>
                                    <input type="text" asp-for="Id" disabled />
                                </td>
                            </tr>
                            <tr>
                                <td>ФИО</td>
                                <td>
                                    <input type="text" asp-for="mo" disabled />
                                </td>
                            </tr>
                            <tr>
                                <td>МО</td>
                                <td>
                                    <input type="text" asp-for="mo" disabled />
                                </td>
                            </tr>
                            <tr>
                                <td>ОО</td>
                                <td>
                                    <input type="text" asp-for="oo" disabled />
                                </td>
                            </tr>
                            <tr>
                                <td>Должность</td>
                                <td>
                                    <input type="text" asp-for="dolgnost_imeyu" disabled />
                                </td>
                            </tr>
                            <tr>
                                <td>Категория</td>
                                <td>
                                    <input type="text" asp-for="kategor" disabled />
                                </td>
                            </tr>
                            <tr>
                                <td>Дата последней аттестации</td>
                                <td>
                                    <input type="text" asp-for="data_last_att" disabled />
                                </td>
                            </tr>
                            <tr>
                                <td>Категория работника</td>
                                <td>
                                    <input type="text" asp-for="kategor_rabot" disabled />
                                </td>
                            </tr>
                            <tr>
                                <td>Дата подачи заявления</td>
                                <td>
                                    <input type="text" asp-for="data_podachi" disabled />
                                </td>
                            </tr>
                            <tr>
                                <td>Дата обновления заявления</td>
                                <td>
                                    <input type="text" asp-for="data_obnovl" disabled />
                                </td>
                            </tr>
                            <tr>
                                <td>Статус</td>
                                <td>
                                    <input type="text" asp-for="status" disabled />
                                </td>
                            </tr>
                            <tr>
                                <td>Итоговый балл</td>
                                <td>
                                    <input type="text" asp-for="ball" disabled />
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>

            @foreach (var row in ViewBag.Obr)
            {
                @if (row.tip_obr == 1)
                {
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4 class="panel-title">
                                <a data-toggle="collapse" data-parent="#accordion" href="#collapseTwo">
                                    Образование
                                </a>
                            </h4>
                        </div>
                        <div id="collapseTwo" class="panel-collapse collapse">
                            <div class="panel-body">

                                <table>
                                    <tr>
                                        <td>ОО</td>
                                        <td>
                                            <input type="text" value="@row.oo" disabled />
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Период обучения</td>
                                        <td>
                                            <input type="text" value="@row.period" disabled />
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Муниципалитет</td>
                                        <td>
                                            <input type="text" value="@row.mo" disabled />
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Специальность</td>
                                        <td>
                                            <input type="text" value="@row.special" disabled />
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Квалификация</td>
                                        <td>
                                            <input type="text" value="@row.kvalif" disabled />
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Тип документа</td>
                                        <td>
                                            <input type="text" value="@row.nazv_doc" disabled />
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Серия</td>
                                        <td>
                                            <input type="text" value="@row.ser_doc" disabled />
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Номер документа</td>
                                        <td>
                                            <input type="text" value="@row.nom_doc" disabled />
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Дата выдачи</td>
                                        <td>
                                            <input type="text" value="@row.data_doc" disabled />
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Регистрационный номер</td>
                                        <td>
                                            <input type="text" value="@row.reg_nom" disabled />
                                        </td>
                                    </tr>

                                </table>
                            </div>
                        </div>
                    </div>
                }

                @if (row.tip_obr == 2)
                {
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4 class="panel-title">
                                <a data-toggle="collapse" data-parent="#accordion" href="#collapseThree">
                                    Курсы повышения квалификации
                                </a>
                            </h4>
                        </div>
                        <div id="collapseThree" class="panel-collapse collapse">
                            <div class="panel-body">
                                <table>
                                    <tr>
                                        <td>Организация</td>
                                        <td>
                                            <input type="text" value="@row.oo" disabled />
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Период обучения</td>
                                        <td>
                                            <input type="text" value="@row.period" disabled />
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Место прохождения</td>
                                        <td>
                                            <input type="text" value="@row.mo" disabled />
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Кол-во часов</td>
                                        <td>
                                            <input type="text" value="@row.kol_chas" disabled />
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Тема курсов</td>
                                        <td>
                                            <input type="text" value="@row.special" disabled />
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Форма участия/проведения</td>
                                        <td>
                                            <input type="text" value="@row.kvalif" disabled />
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Название документа</td>
                                        <td>
                                            <input type="text" value="@row.nazv_doc" disabled />
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Серия</td>
                                        <td>
                                            <input type="text" value="@row.ser_doc" disabled />
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Номер документа</td>
                                        <td>
                                            <input type="text" value="@row.nom_doc" disabled />
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Дата выдачи</td>
                                        <td>
                                            <input type="text" value="@row.data_doc" disabled />
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Регистрационный номер</td>
                                        <td>
                                            <input type="text" value="@row.reg_nom" disabled />
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                }
                @if (row.tip_obr == 3)
                {
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4 class="panel-title">
                                <a data-toggle="collapse" data-parent="#accordion" href="#collapse4">
                                    Второе высшеге образование и профессиональная переподготовка
                                </a>
                            </h4>
                        </div>
                        <div id="collapse4" class="panel-collapse collapse">
                            <div class="panel-body">
                                <table>
                                    <tr>
                                        <td>Организация</td>
                                        <td>
                                            <input type="text" value="@row.oo" disabled />
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Период обучения</td>
                                        <td>
                                            <input type="text" value="@row.period" disabled />
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Место прохождения</td>
                                        <td>
                                            <input type="text" value="@row.mo" disabled />
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Кол-во часов</td>
                                        <td>
                                            <input type="text" value="@row.kol_chas" disabled />
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Вид обучения</td>
                                        <td>
                                            <input type="text" value="@row.vid_obuch" disabled />
                                        </td>
                                    </tr>
                                    <tr>
                                    <tr>
                                        <td>Специальность</td>
                                        <td>
                                            <input type="text" value="@row.special" disabled />
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Квалификация</td>
                                        <td>
                                            <input type="text" value="@row.kvalif" disabled />
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Название документа</td>
                                        <td>
                                            <input type="text" value="@row.nazv_doc" disabled />
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Серия</td>
                                        <td>
                                            <input type="text" value="@row.ser_doc" disabled />
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Номер документа</td>
                                        <td>
                                            <input type="text" value="@row.nom_doc" disabled />
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Дата выдачи</td>
                                        <td>
                                            <input type="text" value="@row.data_doc" disabled />
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Регистрационный номер</td>
                                        <td>
                                            <input type="text" value="@row.reg_nom" disabled />
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                }
            }


            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" data-parent="#accordion" href="#collapse5">
                            Файлы
                        </a>
                    </h4>
                </div>
                <div id="collapse5" class="panel-collapse collapse in">
                    <div class="panel-body">
                        <table>
                            @foreach (var row in ViewBag.File)
                            {
                                <tr>
                                    <td>Название</td>
                                    <td>
                                        @Html.ActionLink("Скачать", "file", "user", new { name_f = row.name_f, id = row.id_zayavl })

                                    </td>
                                </tr>
                                <tr>
                                    <td>Имя файла</td>
                                    <td>
                                        <input type="text" value="@row.name_f" disabled />
                                    </td>
                                </tr>
                                <tr>
                                    <td>Тип файла</td>
                                    <td>
                                        <input type="text" value="@row.kategor_f" disabled />
                                    </td>
                                </tr>
                            }
                        </table>
                    </div>
                </div>
            </div>

            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" data-parent="#accordion" href="#collapse6">
                            Научно-методическая деятельность
                        </a>
                    </h4>
                </div>
                <div id="collapse6" class="panel-collapse collapse in">
                    <div class="panel-body">
                        <table>
                            @foreach (var row in ViewBag.Nauch)
                            {
                                <tr>
                                    <td>Период</td>
                                    <td>
                                        <input type="text" value="@row.period" disabled />

                                    </td>
                                </tr>
                                <tr>
                                    <td>Название работы</td>
                                    <td>
                                        <input type="text" value="@row.nazv" disabled />
                                    </td>
                                </tr>
                                <tr>
                                    <td>Название продукта</td>
                                    <td>
                                        <input type="text" value="@row.nazv_p" disabled />
                                    </td>
                                </tr>
                                <tr>
                                    <td>Уровень</td>
                                    <td>
                                        <input type="text" value="@row.urov" disabled />
                                    </td>
                                </tr>
                                <tr>
                                    <td>Статус участия</td>
                                    <td>
                                        <input type="text" value="@row.status" disabled />
                                    </td>
                                </tr>
                                <tr>
                                    <td>Реализовано</td>
                                    <td>
                                        <input type="text" value="@row.realiz" disabled />
                                    </td>
                                </tr>
                                <tr>
                                    <td>Электронный адрес публикации</td>
                                    <td>
                                        <input type="url" value="@row.el_adr" />
                                    </td>
                                </tr>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <table>
            <tr>
                <td>&nbsp;</td>
                <td>

                    <input type="hidden" asp-for="id_user" />
                    <input type="submit" asp-controller="User" asp-action="Update" value="Обновить" />
                    <input type="submit" value="Сохранить" />
                </td>
            </tr>
        </table>
    </form>

</body>
</html>
