@model Attest.Models.RegisterModel

<h2>Регистрация</h2>

<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly" />
    <div>
        <div>
            <label asp-for="Email">Введите Email</label>
            <input type="text" asp-for="Email" />
            <span asp-validation-for="Email" />
            <br />
        </div>
        <div>
            <label asp-for="Password">Введите пароль</label>
            <input asp-for="Password" />
            <span asp-validation-for="Password" />
            <br />
        </div>
        <div>
            <label asp-for="ConfirmPassword">Повторите пароль</label>
            <input asp-for="ConfirmPassword" />
            <span asp-validation-for="ConfirmPassword" />
            <br />
        </div>
        <div>
            <label asp-for="Snils">Снилс</label>
            <input asp-for="Snils" />
            <span asp-validation-for="Snils" />
            <br />
        </div>
        <div>
            <label asp-for="Snils">Снилс</label>
            <input asp-for="Snils" />
            <span asp-validation-for="Snils" />
            <br />
        </div>
        <div>
            <select id="dolg" asp-for="mo_s" required>

                <option value="" selected="selected">Выберите регион</option>
                <option value="1">Краснодарский край</option>
                <option value="2">Краснодар</option>
                <option value="3">Сочи</option>

            </select>
        </div>
        <div>
            <label asp-for="Sogl">Согласие на обработку персональных данных</label>
            <input id="sogl" type="checkbox" class="a" required />
            <span asp-validation-for="Sogl" />
            <br />
        </div>
        <div>
            <input type="submit" value="Регистрация" />
        </div>
    </div>
</form>