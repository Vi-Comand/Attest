@model Attest.Models.Users

@{
    ViewData["Title"] = "Login";
}

<main class="page hire-me-page">
    <section class="portfolio-block hire-me">
        <div class="container">
            <div class="heading">
                <h1>Войти</h1>
            </div>
            <form class="text-center" style="width: 397px;" method="post" action="~/Home/Lk">
                <div class="form-group text-center"><label class="d-xl-flex justify-content-xl-start" for="email">Email</label><input asp-for="Email" class="form-control" type="email" name="email" required="" placeholder="ivanov@mail.ru" autofocus="" inputmode="email" id="email"></div>
                <div class="form-group"><label class="d-xl-flex justify-content-xl-start" for="message">Пароль</label><input asp-for="pass" class="form-control" type="password" name="pass" required="" id="pass"><a href="#">Забыли пароль</a></div>
                <div class="form-group d-xl-flex justify-content-xl-center align-items-xl-center"><button asp-controller="Home" asp-action="Auto" class=" text-center d-xl-flex justify-content-xl-center align-items-xl-center" type="submit">Войти</button></div>
            </form>
            <a asp-controller="User" asp-action="User">View</a>
        </div>
    </section>
</main>